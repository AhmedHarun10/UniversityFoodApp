<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:gravity="center_vertical"
    >

    <ImageView
        android:id="@+id/imageViewRestaurantImage"
        android:layout_width="390dp"
        android:layout_height="210dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp" />

    <ImageView
        android:id="@+id/imageViewFrame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="0dp"
        app:srcCompat="@drawable/recyclerviewframe11" />

    <ImageView
        android:id="@+id/imageViewLogo"
        android:layout_width="94dp"
        android:layout_height="94dp"
        android:layout_marginTop="33dp"
        android:layout_marginLeft="243dp"/>

    <ImageView
        android:id="@+id/imageViewLogoFrame"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="240dp"
        android:layout_marginTop="30dp"
        app:srcCompat="@drawable/recyclerviewlogoframe1" />

    <TextView
        android:id="@+id/restaurantNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="215dp"
        android:fontFamily="@font/nunito_sans_bold"
        android:text="test"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/addressTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"

        android:layout_marginTop="215dp"
        android:layout_marginRight="15dp"
        android:fontFamily="@font/nunito_sans_light"
        android:maxWidth="120dp"
        android:text="Address"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/foodTypeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="215dp"
        android:layout_toLeftOf="@+id/imageViewStar"
        android:fontFamily="@font/nunito_sans_light"
        android:text="4.0"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/imageViewStar"
        android:layout_width="17dp"
        android:layout_height="17dp"
        android:layout_marginTop="218dp"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/staricon" />


</RelativeLayout>