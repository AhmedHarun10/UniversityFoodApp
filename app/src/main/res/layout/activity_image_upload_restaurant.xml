<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ImageUploadRestaurant"
    android:background="@color/lessoffwhite">


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonChooseRestaurantImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/textViewRestaurantImage"
        android:layout_marginTop="30dp"
        android:background="@drawable/rounded_button"
        android:text="Choose File"
        android:textColor="@color/white" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonChooseRestaurantLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/textViewRestaurantLogo"
        android:background="@drawable/rounded_button"
        android:text="Choose File"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/textViewRestaurantImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:text="Choose an image for your restaurant."
        android:textColor="@color/grey"/>

    <TextView
        android:id="@+id/textViewRestaurantLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/buttonChooseRestaurantImage"
        android:text="Choose a logo for your restaurant."
        android:textColor="@color/grey"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonChooseRestaurantImageSubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/buttonChooseRestaurantLogo"
        android:background="@drawable/rounded_button"
        android:text="Submit"
        android:textColor="@color/white" />


</RelativeLayout>