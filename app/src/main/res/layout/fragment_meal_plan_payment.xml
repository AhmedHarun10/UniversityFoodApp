<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.MealPlanPayment">

    <TextView
        android:id="@+id/textViewSchoolID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:text="School ID"
        android:fontFamily="@font/nunito_sans_normal"
        android:textSize="30sp"
        android:textColor="@color/grey"/>


    <EditText
        android:id="@+id/editTextMealPlanId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewSchoolID"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="@drawable/custom_edit_text"
        android:ems="8"
        android:fontFamily="@font/nunito_sans_normal"
        android:hint="Enter meal plan ID"
        android:inputType="number"
        android:maxLength="5"
        android:maxLines="1"
        android:padding="10dp"
        android:textColor="@color/grey"
        android:textColorHighlight="@color/orange"
        android:textCursorDrawable="@color/orange"
        android:theme="@style/text_input_layout" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonSubmitMealPlan"
        android:layout_width="120dp"
        android:layout_height="65dp"
        android:layout_below="@id/editTextMealPlanId"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="65dp"
        android:background="@drawable/rounded_button"
        android:text="Submit"
        android:textColor="@color/white"
        android:textSize="20sp"/>

</RelativeLayout>