<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DeliveryFragment"
    android:id="@+id/canvas_delivery"
    android:background="@color/lessoffwhite">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/delivery_page_title"
            android:text="Delivery"
            android:textSize="33dp"
            android:layout_gravity="center_horizontal"
            style="@style/login_text_style"
            android:layout_marginTop="120dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/grey"/>

        <ImageView
            android:id="@+id/delivery_image"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/courier"
            android:layout_width="300dp"
            android:layout_height="150dp"/>

        <TextView
            android:id="@+id/address_label"
            android:layout_width="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_marginStart="30dp"
            android:text="Delivery Address"
            style="@style/login_text_style"
            android:textSize="25dp"
            android:layout_height="wrap_content"
            android:textColor="@color/grey"/>

        <EditText
            android:id="@+id/postalAddress"
            android:layout_marginStart="35dp"
            android:layout_width="350dp"
            android:hint="Address"
            android:gravity="top"
            android:padding="10dp"
            android:inputType="text"
            android:background="@drawable/custom_edit_text"
            android:layout_height="wrap_content"
            android:textColor="@color/grey"/>
        <TextView
            android:id="@+id/delivery_instruction_label"
            android:layout_width="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="30dp"
            android:text="Delivery Instructions"
            style="@style/login_text_style"
            android:textSize="25dp"
            android:layout_height="wrap_content"
            android:textColor="@color/grey"/>
        <EditText
            android:id="@+id/delivery_instruction"
            android:layout_marginStart="35dp"
            android:layout_width="350dp"
            android:hint="Delivery instructions"
            android:gravity="top"
            android:padding="10dp"
            android:inputType="text"
            android:background="@drawable/custom_edit_text"
            android:layout_height="90dp"
            android:textColor="@color/grey"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/submit_button_delivery"
            android:layout_marginTop="30dp"
            android:text="submit"
            style="@style/login_text_style"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/rounded_button"
            android:layout_width="325dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>










</FrameLayout>